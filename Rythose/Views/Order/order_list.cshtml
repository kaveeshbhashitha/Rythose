
@{
    ViewData["Title"] = "Order List";
    Layout = "../Shared/admin_layout.cshtml";
}

<script>
    $(document).ready(function () {
        $("#orderManagement").addClass("active");
        $("#order_list").addClass("active");
        $("#orderManagement_block").css("display", "block");
    });

</script>

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <p>Order List</p>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <p style='font-size:16px;font-weight:bold'>New Aircraft Order List</p>
                    </div>

                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <p class="text-muted font-13 m-b-30">
                                        List of customer aircraft orders awaiting commencement of
                                        manufacturing.
                                    </p>
                                    <table id="datatable" class="table table-striped" style="width:100%">
                                        <thead style="background-color: #006666;color:white">
                                            <tr>
                                                <th>ID</th>
                                                <th>Aircraft</th>
                                                <th>Customer</th>
                                                <th>Seating <br> Option</th>
                                                <th>Interior <br> Design</th>
                                                <th>Connectivity <br> Option</th>
                                                <th>Entertaintment <br> Option</th> 
                                                <th>Order <br /> Date</th>
                                                <th>Process</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                @foreach (var orderProcess in Model)
                                                {
                                                    <tr>
                                                        <td>@orderProcess.OrderId</td>
                                                        <td>@orderProcess.Aircraft.ModelName</td>
                                                        <td>@orderProcess.Customer.FullName</td>
                                                        <td>@orderProcess.SeatingOption.SubCategoryName</td>
                                                        <td>@orderProcess.InteriorDesign.SubCategoryName</td>
                                                        <td>@orderProcess.ConnectivityOption.SubCategoryName</td>
                                                        <td>@orderProcess.EntertainmentOption.SubCategoryName</td>
                                                        <td>@orderProcess.OrderDate</td>
                                                        <td>
                                                            <a asp-controller="Order" asp-action="start_manufacture" asp-route-id="@orderProcess.OrderId"
                                                            class="btn btn-sm btn-info">Start</a>
                                                        </td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
</div>
<!-- /page content -->

@{
    ViewData["Title"] = "Inventory Management";
    Layout = "../Shared/admin_layout.cshtml";
}


<script>
    $(document).ready(function () {
        $("#inventoryManagement").addClass("active");
        $("#core_item_reg").addClass("active");
        $("#ainventoryManagement_block").css("display", "block");
    });

</script>

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <p>Inventory Register</p>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <p style='font-size:16px;font-weight:bold'>New Core Manufacture Items Registration</p>
                    </div>

                    <div class="x_content">
                        <br />
                        <form asp-action="CoreRegister_item" asp-controller="Inventory" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                            <div class="row">
                                <div class="col-lg-5">
                                    <label class="label-align" for="item-name">
                                        Item Name <span class="required" style="color: red;">*</span>
                                    </label>
                                    <input type="text" id="item-name" name="EssentialName" required="required" class="form-control">
                                </div>

                                <div class="col-lg-3">
                                    <label class="label-align" for="item-date">
                                        Purchase Date <span class="required" style="color: red;">*</span>
                                    </label>
                                    <input type="date" id="item-date" name="EssentialDate" required="required" class="form-control">
                                </div>

                                <div class="col-lg-3"></div>
                                <div class="col-lg-3">
                                    <br><br>
                                    <label class="label-align" for="main-category">
                                        Item Type <span class="required" style="color: red;">*</span>
                                    </label>
                                    <select id="main-category" name="EssentialType" class="form-control" required>
                                        <option value=""> -Select- </option>
                                        <option value="Airframe"> Airframe </option>
                                        <option value="Powerplant"> Powerplant </option>
                                        <option value="Avionics"> Avionics </option>
                                        <option value="Miscellaneous"> Miscellaneous </option>
                                    </select>
                                </div>


                                <div class="col-lg-2">
                                    <br><br>
                                    <label class="label-align" for="quantity">
                                        Qty <span class="required" style="color: red;">*</span>
                                    </label>
                                    <input type="number" id="quantity" name="EssentialQuantity" required="required" class="form-control" oninput="updateStock()">
                                </div>

                                <div class="col-md-12 col-sm-12 offset-md-12" style="text-align:right">
                                    <br><br>
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <br><br>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>
        </div>
<br>
<br>
<br>
    </div>
<!-- /page content -->

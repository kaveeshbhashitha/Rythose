@{
    ViewData["Title"] = "Category Register";
    Layout = "../Shared/admin_layout.cshtml";
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-d3I2RTOmVbKA9taV4ZabVYqq7Hg9yQr8ZfNlSlaKt/aPP6rDQa4fP+JFMEbfH1A" crossorigin="anonymous">

<script>
    $(document).ready(function () {
        $("#inventoryManagement").addClass("active");
        $("#cat_reg").addClass("active");
        $("#ainventoryManagement_block").css("display", "block");
    });

</script>

<!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <p>Category Register</p>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <p style='font-size:16px;font-weight:bold'>Item Category Registration</p>
                                </div>

                                <div class="x_content">
                                    <br />
                        <form asp-action="Register_cat" asp-controller="Inventory" method="post" data-parsley-validate >
                                        
                                        <div class="row">
                                            <div id="subCat" class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-8">
                                            <label class="label-align" for="SubCategoryName">
                                                Category Name <span style="color:red" class="required">*</span>
                                                        </label>
                                                         <input type="text" id="SubCategoryName" name="SubCategoryName"  required="required"
                                                   class="form-control " >
                                                        <br><br>
                                                    </div>
                                                 <div class="col-lg-4"></div>
                                                    <div class="col-lg-4">
                                                        <label class="label-align" for="model-name">Main Category <span class="required" style="color:red">*</span>
                                                        </label>
                                            <select id="MainId" name="MainId" class="form-control" required  >
                                                            <option value="">-- Select --</option>
                                                                @foreach (var mainCategory in Model)
                                                                {
                                                                    <option value="@mainCategory.MainId">@mainCategory.MainCategoryName</option>
                                                                }
                                                        </select>
                                                        <br><br>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label class="label-align" for="model-name">Customize Price ($)
                                                            <span class="required" style="color:red">*</span>
                                                        </label>
                                                        <input type="number" id="Price" name="Price" required="required"
                                                   class="form-control " >
                                                    </div>
                                                </div>
                                    <div class="col-md-12 col-sm-12 offset-md-12" style="text-align:right">
                                        <button class="btn btn-primary" type="reset">Reset</button>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                                </div>
                                            </div>

                                        </div>
                        </form>
                                </div>


                                
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
    </div>


    <!-- /page content -->

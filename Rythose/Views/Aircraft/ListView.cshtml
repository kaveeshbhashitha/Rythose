@{
    ViewData["Title"] = "Aircraft Gallery";
    Layout = "../Shared/web_layout.cshtml";
}


<script>
    var myLinkElement = document.getElementById("aircraftTab");
    myLinkElement.classList.toggle("active");
</script>

<!-- ***** Call to Action Start ***** -->
<section class="section section-bg" id="call-to-action" style="background-image: url('/web/assets/images/back3.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <br>
                    <br>
                    <h2>Our <em>Aircrafts</em></h2>
                    <p>Discover elevated horizons with our elite aircraft catalog</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Call to Action End ***** -->
<!-- ***** Fleet Starts ***** -->
<section class="section" id="trainers">
    <div class="container">
        <br>
        <br>
        <div class="contact-form">
            <form asp-action="ListView" asp-controller="Aircraft" id="contact" method="post">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Aircraft Type:</label>

                            <select name="AircraftType">
                                <option value="">All</option>
                                <option value="Light Private Jet">Light Private Jets</option>
                                <option value="Mid-Size Private Jet">Mid-Size Private Jets</option>
                                <option value="Super Mid-Size Private Jet">Super Mid-Size Private Jets</option>
                                <option value="Heavy Private Jet">Heavy Private Jets</option>
                                <option value="Turboprop Private Jet">Turboprop Private Jets</option>
                                <option value="VLJ Private Jet">VLJ Private Jets</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Passanger Capacity:</label>

                            <select name="Passengers">
                                <option value="">--All --</option>
                                <option value="1">1 to 5</option>
                                <option value="2">5 to 10</option>
                                <option value="3">10 to 15</option>
                                <option value="4">15 to 20</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Range:</label>

                            <select name="Range">
                                <option value="">-- All --</option>
                                <option value="1">Below 5 hours</option>
                                <option value="2">5 to 10 Hours</option>
                                <option value="3">More than 10 Hours</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Speed:</label>

                            <select name="Speed">
                                <option value="">-- All --</option>
                                <option value="1">Below 300 Knots</option>
                                <option value="2">300 to 400 Knots</option>
                                <option value="3">400 to 500 Knots</option>
                                <option value="4">More than 500 Knots</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="col-sm-4 offset-sm-4">
                    <div class="main-button text-center">
                        <input type="submit" style="background-color:#0070E0;color:white" value="Search">
                    </div>
                </div>
                <br>
                <br>
            </form>
        </div>

        <div class="row">
            @foreach (var item in Model)
                {
                    <div class="col-lg-4">
                        <div class="trainer-item" style="height:440px">
                            <div class="image-thumb" style="margin-bottom:5px !important">
                                <img src="~/uploads/@item.FrontImage1" alt="" style="height:238px">
                            </div>
                            <div class="down-content">
                                <span style="font-size:18px;margin-top:5px !important">
                                    $@item.Price.ToString("N2")
                                </span>

                                <h4>@item.ModelName</h4>

                                <p style="margin-bottom:5px !important">
                                    <i class="fa fa-dashboard"></i> @item.Speed Knots &nbsp;&nbsp;&nbsp;
                                    <i class="fa fa-cube"></i> @item.Range Hours &nbsp;&nbsp;&nbsp;
                                </p>

                                @if (@item.Quantity == 0)
                                {
                                    <div style="background-color: red; color: white; padding: 5px; text-align: center;">
                                        <strong>Sold Out</strong>
                                    </div>
                                }

            <ul class="social-icons" style="float:right;font-size:13px;">
                <li><a asp-action="SingleDetail" asp-controller="Aircraft" asp-route-id="@item.AircraftId">+ More Details</a></li>
            </ul>
        </div>
    </div>
                    </div>
                }
            

        </div>

        <br>


    </div>
</section>
<!-- ***** Fleet Ends ***** -->
